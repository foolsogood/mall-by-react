{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "outDir": "dist",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@controller/*": ["app/controller/*"],
      "@extend/*": ["app/extend/*"],
      "@public/*": ["app/public/*"],
      "@config/*": ["config/*"],
      "@models/*": ["lib/models/*"],
      "@services/*": ["lib/services/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "app/public",
    "app/views",
    "dist",
    "node_modules*",
    "test",
    "**/*.d.ts",
    "**/*.spec.ts"
  ]
}
